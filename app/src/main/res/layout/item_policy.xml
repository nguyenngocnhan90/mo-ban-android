<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="15dp"
    android:orientation="vertical"
    android:paddingBottom="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/item_policy_img"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop" />

                <com.moban.view.custom.LevelProgressView
                    android:id="@+id/item_policy_sale_progress"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    app:currentPoint="0" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <TextView
        android:id="@+id/item_policy_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="2"
        android:paddingTop="10dp"
        android:paddingEnd="0dp"
        android:textAppearance="@style/Bold"
        android:textColor="@color/black"
        android:textSize="@dimen/normal_font_size" />

    <LinearLayout
        android:id="@+id/item_policy_view_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_policy_tv_discount_service_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAppearance="@style/Regular"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/large_font_size" />

            <TextView
                android:id="@+id/item_policy_tv_service_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAppearance="@style/Regular"
                android:textColor="@color/color_black_30"
                android:textSize="@dimen/detail_font_size_10" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
