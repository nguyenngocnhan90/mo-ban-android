<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/project_library_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_gray_background_50">

    <include
        android:id="@+id/project_library_empty"
        layout="@layout/item_project_detail_empty"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/project_library_sale_kits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_background_gray"
            android:paddingBottom="20dp"
            android:paddingEnd="10dp"
            android:paddingStart="15dp"
            android:paddingTop="20dp"
            android:text="@string/sale_kits"
            android:textAllCaps="true"
            android:textAppearance="@style/Bold"
            android:textColor="@color/color_black"
            android:textSize="@dimen/medium_font_size" />

        <LinearLayout
            android:id="@+id/project_library_document_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:paddingTop="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:src="@drawable/pdf" />

            <TextView
                android:id="@+id/project_library_tv_document_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:textAppearance="@style/Bold"
                android:textColor="@color/color_black"
                android:textSize="@dimen/large_font_size" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/open_document" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
