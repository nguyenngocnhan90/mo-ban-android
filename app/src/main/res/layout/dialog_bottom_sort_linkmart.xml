<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/sort_linkmart_newest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/sort_linkmart_img_newest"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/sort_reward"
            android:tint="@color/color_black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/sort_linkmart_tv_newest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/sort_latest"
            android:textColor="@color/color_menu_selected"
            android:textSize="@dimen/large_font_size" />

        <ImageView
            android:id="@+id/sort_linkmart_img_check_newest"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/sort_checked" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_text_black_5" />

    <LinearLayout
        android:id="@+id/sort_linkmart_popular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/sort_linkmart_img_popular"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/sort_newest"
            android:tint="@color/color_black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/sort_linkmart_tv_popular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/sort_hot"
            android:textColor="@color/color_black"
            android:textSize="@dimen/large_font_size" />

        <ImageView
            android:id="@+id/sort_linkmart_img_check_popular"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/sort_checked"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_text_black_5" />

    <LinearLayout
        android:id="@+id/sort_linkmart_sale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/sort_linkmart_img_sale"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/sort_hot"
            android:tint="@color/color_menu_selected"
            android:visibility="gone" />

        <TextView
            android:id="@+id/sort_linkmart_tv_sale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/sort_sale"
            android:textColor="@color/color_black"
            android:textSize="@dimen/large_font_size" />

        <ImageView
            android:id="@+id/sort_linkmart_img_check_sale"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:src="@drawable/sort_checked" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_text_black_5" />

</LinearLayout>