<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingTop="15dp"
        android:paddingEnd="12dp"
        android:paddingBottom="15dp">

        <ImageView
            android:id="@+id/item_mission_img_badge"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/background_half_round_yellow_button" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_transaction_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="8dp"
                android:maxLines="2"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="10 LHC"
                android:textColor="@color/color_black"
                android:textSize="@dimen/normal_font_size" />

            <TextView
                android:id="@+id/item_transaction_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="8dp"
                android:paddingBottom="5dp"
                android:text="10 LHC"
                android:textColor="@color/color_black"
                android:textSize="@dimen/normal_font_size" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_transaction_changed_coin"
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/background_button_linkhouse_round_4"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="10 LHC"
            android:textAllCaps="true"
            android:textColor="@color/color_white"
            android:textSize="@dimen/medium_font_size" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_separate_line" />

</LinearLayout>