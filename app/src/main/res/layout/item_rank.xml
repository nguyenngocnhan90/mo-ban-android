<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_rank_tv_index"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center"
        android:text="1"
        android:textAppearance="@style/Regular"
        android:textColor="@color/color_gray_background_70"
        android:textSize="17sp" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/item_rank_img_avatar"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        app:civ_border_color="@color/color_white"
        app:civ_border_width="1dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_rank_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_vertical"
            android:text="@string/project"
            android:textAppearance="@style/Regular"
            android:textColor="@color/color_black"
            android:textSize="@dimen/large_font_size" />

        <TextView
            android:id="@+id/item_rank_tv_branch_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_vertical"
            android:text="@string/project"
            android:textAppearance="@style/Regular"
            android:textColor="@color/color_black"
            android:textSize="@dimen/large_font_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_rank_tv_level"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/color_black"
        android:textSize="@dimen/large_font_size" />

</LinearLayout>
