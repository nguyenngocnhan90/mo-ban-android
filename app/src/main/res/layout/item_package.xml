<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_gray_border_round_5"
    android:padding="0dp"
    android:layout_marginStart="20dp">

    <ImageView
        android:id="@+id/item_package_img_hot"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:src="@drawable/hot_tag" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="15dp"
        android:paddingEnd="10dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/item_package_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Gió Bacsic"
            android:textAppearance="@style/Bold"
            android:textColor="@color/color_black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/item_package_tv_commision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="65%"
            android:textAppearance="@style/Bold"
            android:textColor="@color/color_black"
            android:textSize="@dimen/large_font_size_24" />

        <TextView
            android:id="@+id/item_package_tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Phí HH Cơ Bản"
            android:textAppearance="@style/Regular"
            android:textColor="@color/color_black"
            android:textSize="@dimen/large_font_size_15" />

        <Button
            android:id="@+id/item_package_btn_join"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_gray_round_5"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="Đăng Ký"
            android:textAllCaps="true"
            android:textAppearance="@style/Bold"
            android:textColor="@color/color_black"
            android:textSize="@dimen/normal_font_size" />

    </LinearLayout>

</RelativeLayout>
