<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@drawable/special_deal_bg"
    android:orientation="vertical">

    <ImageView
        android:layout_width="14dp"
        android:layout_height="24dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/special_deal_tag" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/feed_special_deal_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:padding="10dp"
            android:scrollHorizontally="true"
            android:text="Ưu đãi đặc biệt"
            android:textAppearance="@style/Bold"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_font_size" />

        <TextView
            android:id="@+id/feed_special_deal_btn_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:padding="10dp"
            android:scrollHorizontally="true"
            android:text="Tất cả"
            android:textAllCaps="true"
            android:textAppearance="@style/Bold"
            android:textColor="#D8D8D8"
            android:textSize="@dimen/normal_font_size" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/feed_special_deal_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" />

</LinearLayout>

